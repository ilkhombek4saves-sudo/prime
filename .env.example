# Prime Production Configuration
# Copy to .env and fill in your values

# =============================================================================
# SECURITY - CHANGE THESE!!!
# =============================================================================

# Generate with: openssl rand -hex 32
SECRET_KEY=change-me-to-64-char-hex-string
JWT_SECRET=change-me-to-different-64-char-hex-string

# Database credentials
DB_USER=prime
DB_PASSWORD=change-me-to-strong-password-32-chars

# =============================================================================
# DOMAIN & EMAIL (for HTTPS)
# =============================================================================

# Your domain name (e.g., prime.example.com)
DOMAIN=localhost

# Email for Let's Encrypt notifications
EMAIL=admin@example.com

# =============================================================================
# API KEYS (optional but recommended)
# =============================================================================

# OpenAI
OPENAI_API_KEY=sk-...

# Anthropic Claude
ANTHROPIC_AUTH_TOKEN=sk-ant-...

# DeepSeek
DEEPSEEK_API_KEY=sk-...

# Moonshot Kimi
KIMI_API_KEY=sk-...

# Z.ai GLM
ZAI_API_KEY=...

# =============================================================================
# TELEGRAM BOT (optional)
# =============================================================================

# Get from @BotFather
TELEGRAM_BOT_TOKENS=123456:ABC-DEF...

# =============================================================================
# ADVANCED (don't change unless you know what you're doing)
# =============================================================================

# Number of API workers (default: 4)
WORKERS=4

# Log level
LOG_LEVEL=info

# Enable metrics endpoint
METRICS_ENABLED=true

# =============================================================================
