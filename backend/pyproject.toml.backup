[project]
name = "multibot-aggregator"
version = "0.1.0"
description = "Multi-bot aggregator backend"
readme = "../README.md"
requires-python = ">=3.10"
dependencies = [
  "fastapi>=0.115.0",
  "uvicorn[standard]>=0.30.0",
  "sqlalchemy>=2.0.32",
  "psycopg[binary]>=3.2.1",
  "alembic>=1.13.2",
  "pydantic>=2.8.2",
  "pyyaml>=6.0.2",
  "httpx>=0.27.0",
  "tenacity>=9.0.0",
  "prometheus-client>=0.20.0",
  "python-jose[cryptography]>=3.3.0",
  "passlib[bcrypt]>=1.7.4",
  "python-multipart>=0.0.9",
  "orjson>=3.10.7",
  "jsonschema>=4.23.0",
  "python-telegram-bot>=21.0",
  "ddgs>=0.1.0",
  "bcrypt>=4.0.0",
  # RAG document parsing (optional â€” graceful ImportError if not installed)
  "pypdf>=4.0.0",
  "python-docx>=1.1.0",
  # Phase 1: Docker sandbox
  "docker>=7.0",
  # Phase 2: Cron scheduler (already present via apscheduler)
  "apscheduler>=3.10.0",
  # Phase 3: Skills hot-reload (optional)
  "watchdog>=4.0.0",
]

[project.optional-dependencies]
dev = [
  "pytest>=8.3.2",
  "pytest-asyncio>=0.24.0",
  "httpx>=0.27.0",
  "ruff>=0.6.1",
  "black>=24.8.0",
  "pip-audit>=2.7.3",
]

[build-system]
requires = ["setuptools>=68.0"]
build-backend = "setuptools.build_meta"

[tool.black]
line-length = 100
target-version = ["py310"]

[tool.ruff]
line-length = 100
target-version = "py310"

[tool.ruff.lint]
select = ["E", "F", "I", "B", "UP", "N"]

[tool.pytest.ini_options]
pythonpath = ["app"]
asyncio_mode = "auto"
